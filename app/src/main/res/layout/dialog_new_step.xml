<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_challenge"
        android:textAlignment="center"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/challengeEText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:hint="@string/activity_hint" />

    <TextView
        android:id="@+id/dfficultyTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Difficulty (1 - 10)"
        android:textAlignment="center" />

    <SeekBar
        android:id="@+id/difficultySeekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:max="9"
        android:progress="5" />

    <TextView
        android:id="@+id/scoreTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center" />

    <Button
        android:id="@+id/addChallengeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/add_button" />

</LinearLayout>